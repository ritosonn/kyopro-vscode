{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-W",
                "-Wall",
                "-g",
                "${fileBasename}",
                "-o",
                "${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "submit",
            "type": "shell",
            "command": "python",
            "args": [
                "./sandbox.py",
                "-submit",
                "${fileBasenameNoExtension}"
            ],
            "problemMatcher": [],
            "dependsOn": "build"
        }
    ]
}